<p class="current-user">Logged in as: <%= current_user.name %></p>

<section id='user'>
    <% if @user %>
        <img src=<%= @user.photo %> alt="image">
        <div>
            <h1><%= @user.name%></h1>
            <p>Number of post: <%= @user.postscounter%></p>
        </div>
    <% end %>
</section>
<p id='user-bio'>
    Bio <br>
    <%= @user.bio %>
</p>
<section id='post'>
    <ul>
        <% @posts.each_with_index do |post,index| %>
            <%= link_to({ controller: "posts", action: "show", user_id: @user.id, id: post.id }) do %>
                <li>
                    <p>Post #<%= index + 1%></p>
                    <h3>
                        <%= post.title %> <br>
                    </h3>
                    <div>
                        <p>Comments: <%= post.commentscounter %>,</p>
                        <p>Likes: <%= post.likescounter %></p>
                    </div>
                </li>
            <% end %>
        <% end %>
    </ul>

    <%= link_to({ controller: "posts", action: "index", user_id: @user.id }) do %>
        <%= button_to "See all posts" %>
    <% end %>
    <div>
        <button>
            <%= link_to 'Back', :back %>
        </button>
    </div>
</section>
