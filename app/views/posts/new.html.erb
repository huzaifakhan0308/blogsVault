<div id="post-new">
  <p class="current-user">Logged in as: <%= @user.name %></p>
  <section id="create-form">
    <h1>Create a post</h1>
    <ul>
      <%= form_with model: @post, url: user_posts_path(current_user), method: :post, local: true, scope: :post do |form| %>
        <li>
          <%= form.label :title %>
          <%= form.text_field :title %>
        </li>

        <li>
          <%= form.label :text %> :<br>
          <%= form.text_area :text, size:'70x4' %>
        </li>

        <li class="actions">
          <%= form.submit "Add Post", class: "custom-button" %>
        </li>
      <% end %>
    </ul>
  </section>
</div>
